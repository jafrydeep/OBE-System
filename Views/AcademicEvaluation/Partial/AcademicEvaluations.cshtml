@model IEnumerable<AcademicEvaluationLists>
@{
    int count = 1;
    int AssessmentCount = 1;
}

<hr class="c-hr-gray" />
<div class=" row pb-2 pt-1">
    <div class="text-left col-md-6">
        <h5 class="font-weight-light"><i class="fas fa-list p-1"></i>Academic Evaluation</h5>
    </div>
    <div class=" text-right col-md-6">
        <a class="btn btn-info btn-custom-style" asp-action="Create" asp-controller="AcademicEvaluation"><i class="fas fa-plus-circle"></i>&nbsp; Create Academic Evaluation</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table custom-table table-bordered display MultipleDataTable" id="dataTable_User" width="100%" cellspacing="0">
                <thead>
                    <tr class="custom-table-user text-center">
                        <th class="text-left">Sl No.</th>
                        <th>@Html.DisplayNameFor(model => model.Course.Name)</th>
                        <th>Assessment Name</th>
                        <th>@Html.DisplayNameFor(model => model.SemesterId)</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@(count++)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>

                        <td>
                            @{
                                foreach (var assessment in item.Assessments)
                                {
                                    if (assessment.Marks > 0){
                                    <label>
                                        @Html.DisplayFor(modelItem => assessment.Assessment.Name),
                                    </label>
                                    }
                                }
                             }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.SemesterId)</td>
                        <td class="text-center" style="font-size: .75em">
                            <a class="p-1 "title="Edit" asp-action="Edit" asp-controller="AcademicEvaluation" asp-route-id="@item.Course.Id" asp-route-value="@item.SemesterId"><i class="far fa-edit text-info"></i></a>
                            <a class="p-1" title="View Details" asp-action="Details" asp-controller="AcademicEvaluation" asp-route-id="@item.Course.Id" asp-route-value="@item.SemesterId"><i class="far fa-eye text-danger"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
