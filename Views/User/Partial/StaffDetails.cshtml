@model Staff

<div>
    @Html.Partial("Notifications/_Notification")

    <div class="row pl-4">
        <h4 class="mt-4 mb-1 font-weight-normal"><i class="fas fa-chalkboard-teacher"></i>&nbsp;PROFILE</h4>
    </div>
    <hr class="c-hr-gray mb-4" />
    <div class="row">
        <div class="col-lg-12 pb-4 border-bottom">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <img class="profile-image" src="~/images/@Model.PersonalInformation.Image">
                </div>

                <div class="form-group col-md-7 text-right">
                    <div class="form-row col-md-12">
                        <h3 class=" col-md-12 font-weight-normal">
                            @Model.PersonalInformation.FullName

                            @{ if (Model.Login.IsActive == 1)
                                { <i class="fa fa-check-circle text-success"></i>}
                                else
                                {<i class="fa fa-times-circle text-danger"></i>}
                            }
                        </h3>
                        <label class="col-md-12">
                            <i class="fas fa-envelope-open-text"></i>
                            @Model.PersonalInformation.Email
                        </label>
                        <label class="col-md-12">
                            <i class="fas fa-phone-alt"></i>
                            @(Model.PersonalInformation.Contact == "" ? "Not Set" : Model.PersonalInformation.Contact)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-row pt-2 custom-profile-front">
                <div class="container col-md-12 text-center pb-4">
                    <hr />
                    <h5 class="font-weight-normal">Personal Information</h5>
                    <hr />
                </div>
                <div class="form-group col-md-6 border-right">
                    <div class="form-row pr-2">

                        <label class="form-group col-md-4" asp-for="@Model.StaffId">Staff ID</label>
                        <label class="form-group border col-md-8"> @(Model.StaffId) </label>

                        <label class="form-group  col-md-4" asp-for="@Model.Department.Name">Department</label>
                        <label class="form-group border col-md-8">@Model.Department.Name</label>

                        <label class="form-group col-md-4" asp-for="@Model.Login.Role"></label>
                        <label class="form-group col-md-8 border"> @(Model.Login.Role)</label>

                        <label class="form-group  col-md-4" asp-for="@Model.PersonalInformation.DateOfBirth"> </label>
                        <label class="form-group border col-md-8">  @(Model.PersonalInformation.DateOfBirth)</label>

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="form-row pl-2">

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.Gender"></label>
                        <label class="form-group col-md-8 border "> @(Model.PersonalInformation.Gender)</label>

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.FathersName"> </label>
                        <label class="form-group border col-md-8 ">@(Model.PersonalInformation.FathersName)</label>

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.MothersName"></label>
                        <label class="form-group col-md-8 border "> @(Model.PersonalInformation.MothersName)</label>

                        <label class="form-group col-md-4" asp-for="@Model.Login.LastLoginDate"></label>
                        <label class="form-group col-md-8 border "> @(Model.Login.LastLoginDate)</label>

                    </div>
                </div>

            </div>

            <hr />
            <div class="form-row  custom-profile-front">
                <div class="container col-md-12 text-center pb-4">
                    <hr />
                    <h6 class="font-weight-normal">Contact Information</h6>
                    <hr />
                </div>
                <div class="form-group col-md-6 border-right">
                    <div class="form-row pr-2">

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.Email"></label>
                        <label class="form-group border col-md-8"> @(Model.PersonalInformation.Email) </label>

                        <label class="form-group  col-md-4" asp-for="@Model.PersonalInformation.Contact"></label>
                        <label class="form-group border col-md-8">@Model.PersonalInformation.Contact</label>
                        
                        <label class="form-group  col-md-4" asp-for="@Model.Login.IsActive">Status</label>
                        <label class="form-group border col-md-8">@(Model.Login.IsActive == 1 ? "Active" : "Deactive")</label>

                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="form-row pl-2">

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.PresentAddress"></label>
                        <textarea class="form-group col-md-8 border" readonly> @(Model.PersonalInformation.PresentAddress)</textarea>

                        <label class="form-group col-md-4" asp-for="@Model.PersonalInformation.PermanentAddress"> </label>
                        <textarea class="form-group col-md-8 border" readonly>@(Model.PersonalInformation.PermanentAddress)</textarea>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>


<script>
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
